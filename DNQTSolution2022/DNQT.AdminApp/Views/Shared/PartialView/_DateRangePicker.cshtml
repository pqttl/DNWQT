@model String[]
@{
    var strName = DNQT.ToolCommon.QTConstants.PartialView._DateRangePicker.STR;
    if (strName == "")
    {
    }
    
    string strType = Model[0];
    string strKeyAndFunction = Model[1];

    string idDatepicker = nameof(idDatepicker)+"_"+strKeyAndFunction;
    string idInputStartDate = nameof(idInputStartDate)+"_"+strKeyAndFunction;
    string idInputEndDate = nameof(idInputEndDate)+"_"+strKeyAndFunction;
    //string voidSetupDatePicker = nameof(voidSetupDatePicker)+"_"+strKeyAndFunction;
}

@if (strType == "jsNewFunction")
{

    <script type="text/javascript">

        @*function voidSetupDatePicker@(strKeyAndFunction)() {
            $('#@idDatepicker').datepicker({
