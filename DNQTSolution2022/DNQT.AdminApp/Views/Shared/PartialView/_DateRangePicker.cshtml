}

@if (strType == "js")
{

    <script type="text/javascript">

        voidSetupDatePickerForId('@idDatepicker');

    </script>

}

@if (strType == "html")
{

    <div class="input-daterange row" id="@idDatepicker">
        <div class="card position-relative col mx-1 px-0">

            @await Html.PartialAsync(DNQT.ToolCommon.QTConstants.PartialView._HeaderGroupBox.PATH
        , new string[] {"Từ 00h00 ngày" })


            <input id="@idInputStartDate" type="text" class="input-sm form-control mt-1 border-0" name="start">
        </div>

        <div class="card position-relative col mx-1 px-0">

            @await Html.PartialAsync(DNQT.ToolCommon.QTConstants.PartialView._HeaderGroupBox.PATH
        , new string[] {"Đến 23h59 ngày" })


            <input id="@idInputEndDate" type="text" class="input-sm form-control mt-1 border-0" name="end">
        </div>

    </div>

}
